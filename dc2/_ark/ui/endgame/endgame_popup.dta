{new
   HamPanel
   endgame_popup_panel
   (file
      "endgame_popup.milo")
   (focus right_hand.hnl)
   (show_hand_help FALSE)
   (header none)
   (item none)
   (item_description none)
   (art '')
   (enter DX_NO_MENU_MOTIONBLUR
      {Flow.flow
         set
         award
         [item]}
      {header.lbl
         set
         text_token
         [header]}
      {item.lbl
         set
         text_token
         [item]}
      {item_description.lbl
         set
         text_token
         [item_description]}
      {if_else
         [art]
         {do
            {award.pic
               set
               tex_file
               [art]}
            {award.mesh set_showing TRUE}}
         {award.mesh set_showing FALSE}}
      {Flow.flow activate})
   (exit)
   (set_popup_text
      ($header $item $item_description)
      {set
         [header]
         $header}
      {set
         [item]
         $item}
      {set
         [item_description]
         $item_description})
   (set_popup_art
      ($art)
      {set
         [art]
         $art})
   (clear_popup_art
      {set
         [art]
         ''})
   (NAV_SELECT_MSG
      {switch
         $name
         (continue
            {ui
               goto_screen
               {gamemode get endgame_popup_between_screen}})})}