{new
   HamStorePanel
   store_panel
   (back_token
      {if_else
         {store_panel allow_cancel}
         back
         ''})
   (load
      {content_loading_panel allowed_to_show TRUE})
   (finish_load
      {content_loading_panel allowed_to_show FALSE})}
{new
   HamPanel
   store_main_panel
   (file
      "store_main.milo")
   (focus right_hand.hnl)
   (top_index 0)
   (focus_song_index 0)
   (back_token back)
   (joypad
      (hold_ms 100)
      (repeat_ms 80))
   (enter DX_NO_MENU_MOTIONBLUR
      {right_hand.hnl
         set_provider
         {store_panel filter_provider}}
      {right_hand.hnl
         scroll_to_index
         [focus_song_index]
         [top_index]})
   (exit
      {set
         [top_index]
         {right_hand.hnl get_top_index}})
   (NAV_SELECT_MSG
      {switch
         $component
         (right_hand.hnl
            {$this view_filtered_songs $index})
         (left_hand.hnl
            {switch
               $name
               (back
                  {ui
                     go_back_screen
                     {{ui current_screen}
                        get
                        back}})})})
   (NAV_HIGHLIGHT_MSG
      {switch
         $component
         (right_hand.hnl
            {set
               [focus_song_index]
               $index})})
   (view_filtered_songs
      ($index)
      {store_panel set_filter $index}
      {store_songs_panel set top_index 0}
      {store_songs_panel set focus_song_index 0}
      {ui goto_screen store_songs_screen})
   (enum_finished
      {right_hand.hnl refresh})}
{new
   HamScreen
   store_main_screen
   (panels meta background_panel store_panel store_main_panel)
   (focus store_main_panel)
   (back main_screen)
   (enter DX_NO_MENU_MOTIONBLUR
      {hamprovider set ui_nav_mode store})}
{new
   HamScreen
   store_loading_screen
   (panels meta background_panel store_panel dialog_panel)
   (focus store_panel)
   (helpbar_confirm_label none)
   (enter DX_NO_MENU_MOTIONBLUR
      {hamprovider set ui_nav_mode store}
      {dialog_panel set_msg store_loading})
   (enum_finished
      {{store_panel offer_provider}
         refresh}
      {ui goto_screen store_main_screen})
   (BUTTON_DOWN_MSG
      {if
         {&&
            {shell_input in_controller_mode}
            {== $action kAction_Cancel}}
         {$this cancel}}
      kDataUnhandled)
   (NAV_SELECT_MSG
      {switch
         $component
         (left_hand.hnl
            {switch
               $name
               (back
                  {$this cancel})})})
   (cancel
      {if
         {store_panel allow_cancel}
         {ui go_back_screen main_screen}})}