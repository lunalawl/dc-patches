{new
   HamPanel
   seldiff_panel
   (file
      "seldiff.milo")
   (focus right_hand.hnl)
   (back_token back)
   (enter DX_NO_MENU_MOTIONBLUR
      {player_provider_1
         add_sink
         $this
         (on_player_present_change)
         0
         FALSE}
      {player_provider_2
         add_sink
         $this
         (on_player_present_change)
         0
         FALSE}
      {hamprovider
         add_sink
         $this
         (on_ui_nav_player_change)
         0
         FALSE}
      {$this update_all}
      {song_info_panel set_song_list_mode FALSE})
   (exit
      {player_provider_1 remove_sink $this on_player_present_change}
      {player_provider_2 remove_sink $this on_player_present_change}
      {hamprovider remove_sink $this on_ui_nav_player_change})
   (update_all
      {right_hand.hnl
         set_provider
         {multiuser_panel
            get_difficulty_provider
            {hamprovider get ui_nav_player}}}
      {right_hand.hnl refresh})
   (on_player_present_change
      {$this update_all})
   (on_ui_nav_player_change
      {$this update_all})
   (NAV_SELECT_MSG
      {switch
         $name
         (back
            {ui
               go_back_screen
               {{ui current_screen}
                  get
                  back}})
         {if
            {==
               {gamemode get gameplay_mode}
               practice}
            {{ui current_screen}
               difficulty_selected
               $name}}})
   (is_difficulty_unlocked
      ($diff)
      {meta_performer is_difficulty_unlocked $diff})}
{new
   HamPanel
   seldiff_practice_panel
   (file
      "seldiff_practice.milo")
   (focus right_hand.hnl)
   (back_token back)
   (enter DX_NO_MENU_MOTIONBLUR
      {player_provider_1
         add_sink
         $this
         (on_player_present_change)
         0
         FALSE}
      {player_provider_2
         add_sink
         $this
         (on_player_present_change)
         0
         FALSE}
      {hamprovider
         add_sink
         $this
         (on_ui_nav_player_change)
         0
         FALSE}
      {$this update_all}
      {song_info_panel set_song_list_mode FALSE})
   (exit
      {player_provider_1 remove_sink $this on_player_present_change}
      {player_provider_2 remove_sink $this on_player_present_change}
      {hamprovider remove_sink $this on_ui_nav_player_change})
   (update_all
      {right_hand.hnl
         set_provider
         {multiuser_panel
            get_difficulty_provider
            {hamprovider get ui_nav_player}}}
      {right_hand.hnl refresh})
   (on_player_present_change
      {$this update_all})
   (on_ui_nav_player_change
      {$this update_all})
   SELECT_RIGHT_LIST_TOKEN
   (poll SLIDE_RIGHT_LIST_ITEM)
   (NAV_SELECT_MSG
      {switch
         $name
         (back
            {ui
               go_back_screen
               {{ui current_screen}
                  get
                  back}})
         {{ui current_screen}
            difficulty_selected
            $name}})}
{new
   HamScreen
   seldiff_practice_screen
   (panels meta background_panel seldiff_practice_panel song_info_panel)
   (focus seldiff_practice_panel)
   (back song_select_screen)
   (enter DX_NO_MENU_MOTIONBLUR
      {meta_performer set_default_crews}
      {voice_input_panel activate_voice_context practice_seldiff_screen})
   (on_voice_command
      ($command)
      {switch
         $command
         BACRO
         {seldiff_practice_panel select_right_list_token $command}})
   (difficulty_selected
      ($diff)
      {gamedata
         setp
         0
         difficulty
         {sym_to_difficulty $diff}}
      {gamedata
         setp
         1
         difficulty
         {sym_to_difficulty $diff}}
      {ui goto_screen startgame_practice_screen})}