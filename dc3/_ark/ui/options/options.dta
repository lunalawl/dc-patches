         BACRO
         {options_movie_panel select_right_list_token $command}})}
{new
   MoviePanel
   outro_movie_panel
   (preload FALSE)
   (loop FALSE)
   (audio TRUE)
   (videos beat_game)
   MOVIE_PANEL_STUFF
   (movie_done
      {if
         {==
            {ui current_screen}
            outro_movie_screen}
         {ui goto_screen options_movie_screen}})}
